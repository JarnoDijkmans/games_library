@page
@model WebApp.Pages.RegisterModel
@{
	Layout = "_layoutLogin";
	ViewData["Title"] = Model.PageTitle;
}
<div class="black-box">
	<form method="post" class="contact-form" autocomplete="off">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<div class="form-floating">
				<input asp-for="FormRegister.Country" class="form-control" id="country" placeholder=" " />
				<label for="country">Country*</label>
				<span asp-validation-for="FormRegister.Country" class="text-danger"></span>
			</div>
			 <div class="form-group-inline">
				<div class="form-floating">
					<input asp-for="FormRegister.FirstName" class="form-control" id="firstname" placeholder=" " />
					<label for="firstname">First Name*</label>
					<span asp-validation-for="FormRegister.FirstName" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="FormRegister.LastName" class="form-control" id="LastName" placeholder=" " />
					<label for="lastName">Last Name*</label>
					<span asp-validation-for="FormRegister.LastName" class="text-danger"></span>
				</div>
			 </div>
			<div class="form-floating">
				<input asp-for="FormRegister.DisplayName" class="form-control" id="displayName" placeholder=" " />
				<label for="displayname">Display Name*</label>
				<span asp-validation-for="FormRegister.DisplayName" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="FormRegister.Email" class="form-control" id="Email" placeholder=" " />
				<label for="email">Email address*</label>
				<span asp-validation-for="FormRegister.Email" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<input asp-for="FormRegister.Password"  type="password" class="form-control" id="Password" placeholder=""/>
				<label for="password">Password*</label>
				<span asp-validation-for="FormRegister.Password" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="FormRegister.City" class="form-control" id="city" placeholder=" " />
				<label for="city">City*</label>
				<span asp-validation-for="FormRegister.City" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="FormRegister.Address" class="form-control" id="address" placeholder=" " />
				<label for="address">Address*</label>
				<span asp-validation-for="FormRegister.Address" class="text-danger"></span>
			</div>

			<input type="submit" value="Continue" />
	</form>
</div>




@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
