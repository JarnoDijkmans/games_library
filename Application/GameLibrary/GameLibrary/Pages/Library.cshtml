@page
@model WebApp.Pages.LibraryModel
@{
    Layout = "_LayoutLibrary";
}

<h1>Your Collection</h1>
<hr />
@if (Model.User != null)
{
    <div class="container">
        <div class="row">
            <div class="container">
                <div class="row">
                    @foreach (var game in Model.PurchasedGames)
                    {
                        var spotlightImages = game.Images.Where(image => image.ImageType == "Spotlight");
                        foreach (var image in spotlightImages)
                        {
                            <div class="col-md-2">
                                <div class="card">
                                    <img class="card-img-top" src="@image.ImageURL" alt="Game image">
                                    <div class="card-body">
                                        <h5 class="card-title">@game.Title</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}
